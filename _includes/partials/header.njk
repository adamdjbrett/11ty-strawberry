<header class="container-fluid desktop" style=" background: linear-gradient( rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.8) ),url('{{ image or metadata.image }}');  height: 800px;  background-position: center;  background-repeat: no-repeat;  background-size: cover;">
<nav class="navbar">{% for n in metadata.navbar %}<a href="{{n.link}}" class="nav-link small text-white">{{n.nav}}</a>{% endfor %}</nav>
<div class="row">
<div class="col-md-10 mx-auto p-3 p-md-5 text-white text-center">
<h1 class="header-title"><a href="{{metadata.url}}" class="text-white">{{title or metadata.title}}</a></h1>
<h2 class="mt-3 lead">{{description or metadata.description}}</h2>
</div>
</div>
</header>
<header class="container-fluid mobile" style=" background: linear-gradient( rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.8) ),url('{{ image or metadata.image }}'); height: 500px;background-position: center;background-repeat: no-repeat;background-size: cover;}">
<nav class="navbar">{% for n in metadata.navbar %}<a href="{{n.link}}" class="nav-link small text-white">{{n.nav}}</a>{% endfor %}</nav>
<div class="row">
<div class="col-md-8 mx-auto p-3 p-md-5 text-white text-center">
<h1 class="header-title"><a href="{{metadata.url}}" class="text-white">{{title or metadata.title}}</a></h1>
<h2 class="mt-3 lead">{{description or metadata.description}}</h2>
</div>
</div>
</header>
